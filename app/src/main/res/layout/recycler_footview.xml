<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/config_bg"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/layout_footer"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/pro_footer"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:indeterminateTint="@color/theme_blue" />

        <TextView
            android:id="@+id/text_footer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="@color/tip" />
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:gravity="center"
        android:id="@+id/llNoMore"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:background="@color/border"
            android:layout_width="50dp"
            android:layout_height="1dp"/>

        <TextView
            android:text="@string/no_loading_data"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNoMoreData"/>

        <View
            android:background="@color/border"
            android:layout_width="50dp"
            android:layout_height="1dp"/>

    </LinearLayout>

</LinearLayout>